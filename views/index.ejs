<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>
    
    
    <div class="container mb-4">
        <h1>Perguntas</h1>
        <a href="/perguntar" class="btn btn-primary mt-2">Fazer pergunta</a>
        <hr>

        <% perguntas.forEach(pergunta=>{ %>
            <div class="card mt-4">
                <div class="card-body">
                    <h3><%= pergunta.titulo%></h3>

                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>" class="btn btn-primary">Responder</a>
                </div>
            </div>
            <%})%>
    </div>
    
</body>
</html>
<%- include('partials/footer.ejs') %>
